<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_azzurro"
    tools:ignore="MissingDefaultResource">

    <!-- HEADER -->
    <RelativeLayout
        android:id="@+id/header"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:gravity="center" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/logo_rotondo"/>

        <EditText
            android:id="@+id/testoRicerca"
            android:layout_width="match_parent"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="#d1d1d1"
            android:layout_height="match_parent"
            android:text="Cerca quiz..."
            android:textColor="#d1d1d1"/>

        <ImageButton
            android:id="@+id/cercaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cerca"
            android:layout_marginLeft="680dp"
            android:layout_marginTop="5dp"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/header"
        android:background="@android:color/black"/>

    <Button
        android:id="@+id/creaQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="10dp"
        android:backgroundTint="#0000FF"
        android:text="Crea nuovo quiz"
        android:textAllCaps="false"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/titolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/creaQuiz"
        android:layout_centerInParent="true"
        android:text="Quiz con cui puoi esercitarti!"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold|italic" />

    <!-- Per mettere in due colonne i quiz -->
    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titolo"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"
        android:numColumns="3"/>


    <!--FOOTER -->
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#6495ed"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/homepageButton"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="5dip"
            android:src="@drawable/homepage"
            android:backgroundTint="#6495ed"/>

        <ImageButton
            android:id="@+id/listaPreferitiButton"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="150dip"
            android:src="@drawable/lista_desideri"
            android:backgroundTint="#6495ed"/>

        <ImageButton
            android:id="@+id/profiloButton"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="300dip"
            android:onClick="onClickProfilo"
            android:src="@drawable/utente"
            android:backgroundTint="#6495ed"/>

    </RelativeLayout>

</RelativeLayout>