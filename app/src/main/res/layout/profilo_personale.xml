<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/sfondoProfilo"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:padding="0dp"
        android:background="@drawable/blu_sfondo_orizzontale"/>

    <ImageView
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/cerchio_bianco"/>

    <ImageView
        android:id="@+id/immagineProfilo"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/immagine_profilo"/>

    <ImageView
        android:id="@+id/menuProfilo"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/menu"/>

    <TextView
        android:id="@+id/nicknameProfilo"
        android:text="Nickname"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@id/immagineProfilo"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/listViewQuiz"
        android:layout_marginTop="50dp"
        android:layout_below="@id/nicknameProfilo"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>


    <!--FOOTER -->
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#6495ed"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/chatBotButton"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="5dip"
            android:src="@drawable/homepage"
            android:backgroundTint="#6495ed"/>

        <ImageButton
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="150dip"
            android:src="@drawable/lista_desideri"
            android:backgroundTint="#6495ed"/>

        <ImageButton
            android:id="@+id/profiloButton"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="300dip"
            android:onClick="onClickProfilo"
            android:src="@drawable/utente"
            android:backgroundTint="#6495ed"/>

    </RelativeLayout>

</RelativeLayout>