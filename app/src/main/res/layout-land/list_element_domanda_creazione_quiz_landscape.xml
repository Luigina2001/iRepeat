<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/sfondo_esagono_orizzontale"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="300dp"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/testoDomanda"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:hint="Testo domanda"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:textSize="40dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <TextView
                android:text="Opzioni di risposta"
                android:layout_marginLeft="120dp"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:textSize="50dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/icona_piu"/>

        </LinearLayout>

        <EditText
            android:id="@+id/risposta1"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:hint="Risposta 1"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/risposta2"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:hint="Risposta 2"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/white"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/risposta3"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:hint="Risposta 3"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/white"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/risposta4"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:hint="Risposta 4"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/white"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/risposta5"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:hint="Risposta 5"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/white"
            android:visibility="invisible"/>

        <TextView
            android:text="Risposta corretta"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="50dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

        <!--ATT. deve essere contenuta nelle opzioni di risposta-->
        <EditText
            android:id="@+id/rispostaCorretta"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:hint="Risposta corretta"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:textSize="40dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/white"/>

    </LinearLayout>

</ScrollView>