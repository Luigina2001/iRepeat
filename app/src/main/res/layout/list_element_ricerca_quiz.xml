<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ricercaElement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/titoloQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titolo quiz"
            android:onClick="onClickVisualizzaQuiz"
            android:textSize="20dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/disciplinaQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disciplina quiz"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/creatorQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Creator Quiz"
            android:paddingLeft="20dp"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/cuoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cuore_vuoto"
        android:onClick="onClickPreferiti"
        android:backgroundTint="@color/white"
        android:layout_alignParentRight="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ricercaElement"
        android:background="@color/black"/>


</RelativeLayout>