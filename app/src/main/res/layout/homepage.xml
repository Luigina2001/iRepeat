<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_homepage">

    <!-- HEADER -->
    <RelativeLayout
        android:id="@+id/header"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <ImageView
            android:layout_width="150dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_scritta"/>

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="35dip"
            android:layout_height="35dp"
            android:layout_marginRight="110dip"
            android:onClick="onClickProfilo"
            android:layout_alignParentRight="true"
            android:src="@drawable/icona_utente"
            android:backgroundTint="@color/white"/>


        <ImageView
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_marginRight="65dip"
            android:src="@drawable/lista_desideri"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:onClick="onClickListaPreferiti"
            android:backgroundTint="@color/white"/>

        <ImageView
            android:id="@+id/filtro"
            android:layout_marginTop="5dp"
            android:layout_width="35dip"
            android:layout_height="35dp"
            android:layout_marginRight="12dip"
            android:onClick="onClickRicerca"
            android:layout_alignParentRight="true"
            android:src="@drawable/icona_ricerca"
            android:backgroundTint="@color/white"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/header"
        android:background="@android:color/black"/>

    <Button
        android:id="@+id/creaQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Crea nuovo quiz"
        android:textAllCaps="false"
        android:onClick="onClickCreaNuovoQuiz"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/titolo"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/creaQuiz"
        android:layout_centerInParent="true"
        android:text="Quiz con cui puoi esercitarti!"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold|italic" />

    <!-- Per mettere in due colonne i quiz -->
    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titolo"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:numColumns="2" />

</RelativeLayout>